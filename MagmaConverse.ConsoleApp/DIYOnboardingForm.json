  "forms": [
    {
      "name": "frmDIYCustomerOnboarding",
      "title": "ADP Do-it-yourself Payroll Registration for Small Businesses",
      "subtitle": "The perfect payroll solution for businesses with 50 or less employees",
      "description": "This forms onboards a new customer for ADP's RUN payroll system",
      "fields": [
        /* Business Basics */
        {
          "name": "photo",
          "prompt": "Upload a photo of yourself",
          "default": "C:/builds/now/web/images/hybrid/@run/splash_wholesale.jpg",
          "type": "upload",
          "properties": {
            "target":  "database",
            "table":   "BusinessPhotos",
            "column":  "Image" 
          }
        },
        {
          "name": "businessName",
          "prompt": "What is the name of your business?",
          "hint": "$html:This must be the legal name of your business",
          "default": "Marc's Pizza",
          "type": "text",
          "validation": {
            "required": true,
            "maxlength": 128
          }
        },
        {
          "name": "numEmployees",
          "prompt": "How many employees do you have?",
          "hint": "$html:Include yourself. The number must be no more than 50.",
          "default": 5,
          "type": "integer",
          "validation": {
            "required": true,
            "rules": [
              {
                "rule": "${value} <= 50",
                "error": "The value must be no more than 50"
              }
            ]
          }
        },
        {
          "name": "FEIN",
          "prompt": "What is the EIN of your business?",
          "hint": "$html:<i>This must be 2 numbers, a dash, and 7 more numbers</i>",
          "default": "12-3456789",
          "type": "text",
          "validation": {
            "required": true,
            "maxlength": 10,
            "minlength": 10,
            "regex": "^\\d{2}-\\d{7}$",
            "validationFunctions": [
              {
                "function": "rest://dunandbradstreet.com/api/validate/ein?number=${FEIN}",
                "method": "GET",
                "returnType": "boolean",
                "async": true,
                "timeout": 60,
                "failOnFalse": true
              }
            ]
          }
        },

        /* Business Contact */

        {
          "name": "sectionBusinessContact",
          "prompt": "This section will ask you about your contact information",
          "type": "section"
        },
        {
          "name": "ownerTitle",
          "prompt": "Title",
          "type": "combo",
          "items": [ "Mr", "Mrs", "Ms", "Dr" ],
          "validation": {
            "required": true
          }
        },
        {
          "name": "ownerName",
          "prompt": "What is the name of the owner of the business?",
          "hint": "$html:This must be the legal owner of your business",
          "default": "Marc Adler",
          "type": "text",
          "validation": {
            "required": true
          }
        },
        {
          "name": "addressStreet",
          "prompt": "Street Address",
          "default": "71 Hanover Rd",
          "type": "text",
          "autocomplete": "this should be a REST call",
          "validation": {
            "required": true
          }
        },
        {
          "name": "addressStreet2",
          "prompt": "Street Address 2 ",
          "type": "text",
          "autocomplete": "this should be a REST call",
          "validation": {
            "required": false
          }
        },
        {
          "name": "addressCity",
          "prompt": "City",
          "default": "Florham Park",
          "type": "text",
          "validation": {
            "required": true
          }
        },
        {
          "name": "addressState",
          "prompt": "State",
          "default": "NJ",
          "type": "combo",
          "ref": "${var:USStatesArray}",
          "validation": {
            "required": true
          }
        },
        {
          "name": "addressZip",
          "prompt": "Zip Code",
          "hint": "$html:<i>This must be the 5 digit zip</i>",
          "default": "07932",
          "type": "text",
          "validation": {
            "required": true,
            "length": 5,
            "regex": "^\\d{5}$"
          }
        },
        {
          "name": "phone",
          "prompt": "Phone number",
          "hint": "$html:<i>Area code and 7 digits</i>",
          "default": "(973) 555-1212",
          "type": "phoneNumber",
          "validation": {
            "required": true
          }
        },
        {
          "name": "email",
          "prompt": "Email Address",
          "default": "magmasystems@gmail.com",
          "type": "emailAddress",
          "validation": {
            "required": true
          }
        },

        /* Register for website (confirm email) */

        {
          "name": "sectionRegister",
          "prompt": "Register for the ADP DIY Onboarding Website",
          "type": "section"
        },
        {
          "name": "password1",
          "prompt": "Choose a password",
          "type": "password",
          "validation": {
            "required": true
          }
        },
        {
          "name": "password2",
          "prompt": "Re-enter the password",
          "type": "password",
          "validation": {
            "required": true,
            "rules": [
              {
                "rule": "${value} == ${field:password1}",
                "error": "The passwords must match"
              }
            ]
          }
        },
        {
          "__comment": "This will wait for the user to confirm his email address",
          "name": "btnRegister",
          "prompt": "Register",
          "type": "button",
          "submissionFunctions": [
            {
              "workflow": "workflow://registerUser",
              "async": false,
              "timeout": 60,
              "failOnFalse": true,
              "properties": {
                "mock": true
              }
            }
          ]
        },

        /* Payroll Details */

        {
          "name": "sectionPayrollDetails",
          "prompt": "Information needed for payroll",
          "type": "section",
          "properties": {
            "pagebreak": true
          }
        },
        {
          "name": "payrollFrequency",
          "prompt": "How often do you pay your employees?",
          "type": "combo",
          "items": [ "Weekly", "Every other week", "Twice per month", "Monthly" ],
          "default":  "Weekly", 
          "validation": {
            "required": true
          }
        },
        {
          "name": "payrollDayOfWeek",
          "prompt": "What day of the week do you pay your employees?",
          "type": "combo",
          "items": [ "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" ],
          "default":  "Friday",
          "validation": {
            "required": true
          }
        },
        {
          "name": "payrollFirstPayrollDate",
          "prompt": "What is the first pay date?",
          "type": "date",
          "default": "${today}",
          "validation": {
            "required": true
          },
          "properties": {
            "calendar": true
          }
        },
        {
          "name": "sectionBankDetails",
          "prompt": "Information needed about your commercial bank account",
          "type": "section",
          "properties": {
            "pagebreak": true
          }
        },
        {
          "name": "bankName",
          "prompt": "What is the name of your bank?",
          "hint": "$html:This must be the legal name of the bank where your business account is",
          "default": "Citibank",
          "type": "text",
          "validation": {
            "required": true,
            "maxlength": 64
          }
        },
        {
          "name": "bankAccountNumber",
          "prompt": "What is the account number?",
          "default": "12-475984",
          "type": "text",
          "validation": {
            "required": true,
            "regex": "^[0123456789-]+$"
          }
        },
        {
          "__comment": "http://regexlib.com/REDetails.aspx?regexp_id=2057",
          "name": "bankRoutingNumber",
          "prompt": "What is the routing number of your bank?",
          "hint": "$html:This is a 9-digit number",
          "default": "123456789",
          "type": "text",
          "validation": {
            "required": true,
            "length": 9,
            "regex": "^((0[0-9])|(1[0-2])|(2[1-9])|(3[0-2])|(6[1-9])|(7[0-2])|80)([0-9]{7})$"
          }
        },

        /* Signatory */

        {
          "name": "sectionCompanySignatory",
          "prompt": "Information needed about the person who will function as the signatory for your company",
          "type": "section",
          "properties": {
            "pagebreak": true
          }
        },
        {
          "name": "cbSignatorySameAsOwner",
          "prompt": "Are you, as the owner, the signatory for the company",
          "hint": "If you are the signatory, then you can skip the next section.",
          "type": "checkbox",
          "actions": {
            "onTrue": {
              "jump": "sectionEmployeeDetails"
            }
          }
        },
        {
          "name": "signatoryTitle",
          "prompt": "Title",
          "type": "combo",
          "items": [ "Mr", "Mrs", "Ms", "Dr" ],
          "validation": {
            "required": true
          }
        },
        {
          "name": "signatoryName",
          "prompt": "What is the name of the signatory of the business?",
          "hint": "$html:This must be the legal signatory of your business",
          "default": "Geeta Acharya",
          "type": "text",
          "validation": {
            "required": true
          }
        },
        {
          "__comment": "http://regexlib.com/REDetails.aspx?regexp_id=9",
          "name": "signatorySSN",
          "prompt": "What is the Social Security Number number of the signatory?",
          "default": "123-45-6789",
          "type": "text",
          "validation": {
            "required": true,
            "regex": "^\\d{3}-\\d{2}-\\d{4}$"
          }
        },
        {
          "name": "signatoryBirthdate",
          "prompt": "What is the date of birth?",
          "type": "date",
          "default": "${today}",
          "validation": {
            "required": true
          },
          "properties": {
            "calendar": true
          }
        },
        {
          "name": "signatoryAddressStreet",
          "prompt": "Street Address",
          "default": "71 Hanover Rd",
          "type": "text",
          "autocomplete": "this should be a REST call",
          "validation": {
            "required": true
          }
        },
        {
          "name": "signatoryAddressStreet2",
          "prompt": "Street Address 2 ",
          "type": "text",
          "autocomplete": "this should be a REST call",
          "validation": {
            "required": false
          }
        },
        {
          "name": "signatoryAddressCity",
          "prompt": "City",
          "default": "Florham Park",
          "type": "text",
          "validation": {
            "required": true
          }
        },
        {
          "name": "signatoryAddressState",
          "prompt": "State",
          "default": "NJ",
          "type": "combo",
          "ref": "${var:USStatesArray}",
          "validation": {
            "required": true
          }
        },
        {
          "name": "signatoryAddressZip",
          "prompt": "Zip Code",
          "hint": "$html:<i>This must be the 5 digit zip</i>",
          "default": "07932",
          "type": "text",
          "validation": {
            "required": true,
            "length": 5,
            "regex": "^\\d{5}$"
          }
        },
        {
          "name": "signatoryPhone",
          "prompt": "Phone number",
          "hint": "$html:<i>Area code and 7 digits</i>",
          "default": "(973) 555-1212",
          "type": "phoneNumber",
          "validation": {
            "required": true
          }
        },
        {
          "name": "signatoryEmail",
          "prompt": "Email Address",
          "default": "geeta@marcspizza.com",
          "type": "emailAddress",
          "validation": {
            "required": true
          }
        },

        /* Employee Details */

        {
          "name": "sectionEmployeeDetails",
          "prompt": "Fill out information for your employees",
          "type": "section",
          "properties": {
            "pagebreak": true
          }
        },
        {
          "name": "employeeDetailsGroup",
          "type": "repeater",
          "hidden": false,
          "validation": {
            "required": false
          },
          "properties": {
            /* The "Add Another" checkbox is the last field of the repeater, and if you answer 'Yes', then the repeating group repeats again */
            "groupname": "Employees",
            "suffix": "${index}",
            "end": "cbAddAnotherEmployee",
            "continuevalue": true
          }
        },
        {
          "name": "empName",
          "prompt": "Employee Name",
          "type": "edit",
          "default": "${random:${var:EmployeeFirstNames}}",
          "validation": {
            "required": false
          }
        },
        {
          "name": "empAddressStreet",
          "prompt": "Street Address",
          "default": "71 Hanover Rd",
          "type": "text",
          "autocomplete": "this should be a REST call",
          "validation": {
            "required": true
          }
        },
        {
          "name": "empAddressStreet2",
          "prompt": "Street Address 2 ",
          "type": "text",
          "autocomplete": "this should be a REST call",
          "validation": {
            "required": false
          }
        },
        {
          "name": "empAddressCity",
          "prompt": "City",
          "default": "Florham Park",
          "type": "text",
          "validation": {
            "required": true
          }
        },
        {
          "name": "empAddressState",
          "prompt": "State",
          "default": "NJ",
          "type": "combo",
          "ref": "${var:USStatesArray}",
          "validation": {
            "required": true
          }
        },
        {
          "name": "empAddressZip",
          "prompt": "Zip Code",
          "hint": "$html:<i>This must be the 5 digit zip</i>",
          "default": "07932",
          "type": "text",
          "validation": {
            "required": true,
            "length": 5,
            "regex": "^\\d{5}$"
          }
        },
        {
          "name": "empPhone",
          "prompt": "Phone number",
          "hint": "$html:<i>Area code and 7 digits</i>",
          "default": "(973) 555-1212",
          "type": "phoneNumber",
          "validation": {
            "required": true
          }
        },
        {
          "name": "empEmail",
          "prompt": "Email Address",
          "default": "sales@marcspizza.com",
          "type": "emailAddress",
          "validation": {
            "required": true
          }
        },
        {
          "name": "empBirthdate",
          "prompt": "Birthdate",
          "type": "date",
          "default": "${today}",
          "validation": {
            "required": false
          }
        },
        {
          "name": "employeeSSN",
          "prompt": "What is the Social Security Number number of the employee?",
          "default": "123-45-6789",
          "type": "text",
          "validation": {
            "required": false,
            "regex": "^\\d{3}-\\d{2}-\\d{4}$"
          }
        },
        {
          "name": "employeeJobTitle",
          "prompt": "What is the employee's job title?",
          "default": "worker",
          "type": "text",
          "validation": {
            "required": false
          }
        },
        {
          "name": "empWorkerType",
          "prompt": "Type of worker",
          "type": "combo",
          "items": [
            "Salary/No Overtime",
            "Salary/Overtime Eligible",
            "Hourly",
            "Owner's Draw"
          ],
          "default":  "Salary/No Overtime", 
          "validation": {
            "required": true
          }
        },
        {
          "name": "employeeSalary",
          "prompt": "What is the employee's salary per pay period?",
          "default": "${expr:Math.floor(Math.random() * 100000)}",
          "type": "currency",
          "validation": {
            "required": false
          }
        },
        {
          "name": "empPayFrequency",
          "prompt": "Pay frequency",
          "type": "combo",
          "items": [ "Weekly", "Biweekly", "Twice per month", "Monthly" ],
          "default":  "Weekly", 
          "validation": {
            "required": true
          }
        },
        {
          "name": "btnSaveEmployee",
          "prompt": "Save Employee",
          "type": "button",
          "hidden": false,
          "validation": {
            "required": false
          },
          "submissionFunctions": [
            {
              "workflow": "mockrest://${config:server.MagmaConverseServer}/FormManagerService/form/${field:frmDIYCustomerOnboarding.Id}/employee/add",
              "properties": {
                "method": "post",
                "body": "${field:employeeDetailsGroup}",
                "bodyFormat": "json"
              }
            }
          ]
        },
        {
          "name": "cbAddAnotherEmployee",
          "prompt": "Add another employee",
          "type": "checkbox",
          "validation": {
            "required": false
          }
        },

        /* Ending message */

        {
          "name": "promptCongrats",
          "prompt": "Congratulations. You have signed up for ADP Payroll.",
          "type": "edit",
          "disabled": true,
          "validation": {
            "required": true
          }
        }
      ]
    }
  ],

  "notes": [
